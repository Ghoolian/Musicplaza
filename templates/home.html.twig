{% extends 'base.html.twig' %}

    {% block title %}Musicplaza Home{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="container-fluid">

            <!-- Page-Title -->
            <div class="row">
                <h4 class="page-title">Starter</h4>
            </div>
            <!-- end page title end breadcrumb -->

        </div> <!-- end container -->
    </div>
    <!-- end wrapper -->
    {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('security_logout') }}">Logout</a>
    </div>
    {% endif %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}



    {% for friends in app.user.friends %}
    {% if friends.acceptCheck == "1" %}
        <h1>Posts van vrienden</h1>
        <table class="table table-bordered mb-0">
        <thead class="thead-light">
        <tr>
            <th>Text</th>
            <th>Date/Time</th>
            <th>Show</th>
        </tr>
        </thead>
        <tbody>
        {% for posts in friends.recipient.posts %}
        {% if app.user.id is not same as (friends.recipient.id) %}

            <tr>
            <td>{{ posts.text }}</td>
            <td>{{ posts.created ? posts.created|date('Y-m-d H:i:s') }}</td>
            <td><a href="{{  path('posts_show', {'id': posts.id}) }}">Show</a></td> <br/>
        {% endif %}
        {% endfor %}
        {% for posts in friends.sender.posts %}
            {% if app.user.id is not same as (friends.sender.id) %}

                <tr>
                <td>{{ posts.text }}</td>
                <td>{{ posts.created ? posts.created|date('Y-m-d H:i:s') }}</td>
                <td><a href="{{  path('posts_show', {'id': posts.id}) }}">Show</a></td> <br/>
            {% endif %}
        {% endfor %}
    {% endif %}
    {% endfor %}
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    2018 - 2019 Â© Highdmin. <span class="d-none d-sm-inline-block"> - Coderthemes.com</span>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->


    <!-- jQuery  -->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/waves.js') }}"></script>
    <script src="{{ asset('js/jquery.slimscroll.js') }}"></script>

    <!-- App js -->
    <script src="{{ asset('js/jquery.core.js') }}"></script>
    <script src="{{ asset('js/jquery.app.js') }}"></script>

{% endblock %}