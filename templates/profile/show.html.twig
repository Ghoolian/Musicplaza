        {#                <td>{{ number.naam }}</td>#}
        {#            {% endfor %}#}
        {#        </tr>#}
        </tbody>
    </table> <br/>

    <td><a href="{{ path('posts_new', {'user_id': user.id}) }}">New post</a></td> <br/>
    <h1>{{ user.name }}'s Posts</h1> <br/>
    <table class="table table-bordered mb-0">
    <thead class="thead-light">
    <tr>
        {% if app.user.isSuper == "1" %}
        {% elseif app.user.id == 'user_id' %}
            <th>Admin actions</th>
        {% endif %}
    </tr>
    </thead>
    <tbody>

    {% for posts in posts %}
<tr>
    <td>{{ album.id }}</td>
    <td>{{ album.name }}</td>
    <td>{{ album.artist.name}} {{ album.artist.surname }}</td>

    <td>
        {% for nummers in album.number %}
            {{ nummers.name }}<br/>
        {% endfor %}
    </td>
    {% if app.user.isSuper == "1" %}


        <td><a href="{{ path('profile_edit', {'id': user.id}) }}">Edit</a></td> <br/>

    {% endif %}
    <a href="{{ path('home') }}">Back to home</a>


{% endblock %}