{% extends 'base.html.twig' %}

    {% block title %}{{ user.username }}'s Inbox{% endblock %}

{% block body %}

    <div class="page-header">
        <h1 style="text-align:center;"> {{ user.username }}'s inbox </h1>
    </div>

    <div class="card">
    <div class="card-body">
    <p class="card-text">
<table class="table table-bordered mb-0">
    <thead class="thead-light">
    <tr>
        <th>Sender</th>
        <th>Accept/Decline</th>
    </tr>
    </thead>
    <tbody>

    {% for friends in app.user.recipient %}
        {% if app.user.id is same as(friends.recipient.id) %}
            {% if friends.visible == 1 %}
    <tr>
        <td>{{ friends.sender.name }}</td>
        <td>
                <a href="{{ path('friendaccept', {'id': friends.id}) }}">Accept</a>
                <a href="{{ path('frienddecline', {'id': friends.id}) }}">Decline</a>
        </td>
    </tr>
            {% endif %}
        {% endif %}
    {% endfor %}
    </tbody>
</table>
    </div>
    </div> <br/>
    <h1 style="text-align:center;">Chats</h1>

            {% for friend in homeCheck %}
                <div class="card text-center">
                <div class="card-body">
            {% if app.user.id != friend.sender.id %}
                    {{ friend.sender.name }} <br/>
                    <a href="{{ path('chat_show', {'id': friend.sender.id }) }}">Chat</a>
            {% else %}
                    {{ friend.recipient.name }} <br/>
                    <a href="{{ path('chat_show', {'id': friend.recipient.id }) }}">Chat</a>

            {% endif %}
                </div>
                </div>
                <br/>
            {% endfor %}

{% endblock %}