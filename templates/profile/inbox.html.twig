{% extends 'base.html.twig' %}

    {% block title %}{{ user.name }}'s Inbox{% endblock %}

{% block body %}

    <div class="page-header">
        <h1 style="text-align:center;"> {{ user.name }}'s inbox </h1>
    </div>
    <div class="card">
    <div class="card-body">
    <p class="card-text">
<table class="table table-bordered mb-0">
    <thead class="thead-light">
    <tr>
        <th>Sender</th>
        <th>Accept/Decline</th>
    </tr>
    </thead>
    <tbody>

    {% for friends in user.recipient %}
        {% if user.id is same as(friends.recipient.id) %}
            {% if friends.visible == 1 %}
    <tr>
        <td>{{ friends.sender.name }}</td>


        <td>
                <a href="{{ path('friendaccept', {'id': friends.id}) }}">Accept</a>
                <a href="{{ path('frienddecline', {'id': friends.id}) }}">Decline</a>
        </td>
    </tr>
            {% endif %}
        {% endif %}
    {% endfor %}
    </tbody>
</table>
    </div>
    </div> <br/>
    <h1 style="text-align:center;">Chats</h1>
            {% for friends in user.sender %}
                <div class="card text-center">
                <div class="card-body">
                    {{ friends.recipient.name }} <br/>

                    <a href="{{ path('chatrequest', {'id': friends.id}) }}">Chat</a>
                </div>
                </div>
                <br/>
            {% endfor %}

{% endblock %}